<script is:inline>
  const carousel = document.querySelector(".carousel");
  const items = document.querySelectorAll(".refe");
  const total = items.length;
  console.log(total);
  let index = 0;

  document.querySelector(".next").addEventListener("click", () => {
    if (index === total - 1) {
      index = 0; // Reset to first slide if we're at the end
    } else {
      index++; // Move to the next slide
    }

    console.log(index);
    carousel.style.transition = "transform 0.6s ease"; // Apply transition for smooth movement
    carousel.style.transform = `translateX(-${index * 100}%)`;
  });

  document.querySelector(".prev").addEventListener("click", () => {
    if (index === 0) {
      index = total - 1; // Reset to last slide if we're at the start
    } else {
      index--; // Move to the previous slide
    }
    carousel.style.transition = "transform 0.6s ease"; // Apply transition for smooth movement
    carousel.style.transform = `translateX(-${index * 100}%)`;
  });
</script>
